<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp" >
    <!-- 汪笑笑，欢迎您        初级顾问 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/phone_num_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_junior_consultant"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/div_person_center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="35dp"
        android:paddingTop="35dp" >
        <!-- 累计佣金        近三个月佣金 -->
        <LinearLayout
            android:id="@+id/commission_llyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <!-- 累计佣金 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计佣金"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/all_commission_tv"
                    style="@style/JiuhongTV"
                    android:text="￥0.00" />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D8D4D0" />
            <!-- 近三个月佣金 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近三个月佣金"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/three_month_commission_tv"
                    style="@style/JiuhongTV"
                    android:text="￥0.00" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >
            <TextView
                android:id="@+id/business_forms_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_bus_forms_logined"
                android:gravity="center_horizontal"
                android:text="我的业务单"
                android:textColor="@android:color/darker_gray" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/clients_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_clients_logined"
                android:gravity="center_horizontal"
                android:text="我的客户"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>