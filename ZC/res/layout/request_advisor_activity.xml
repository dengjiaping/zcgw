<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	<include layout="@layout/include_titlebar" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp"
		android:text="手机号"
		android:textColor="@android:color/darker_gray" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:background="@drawable/bg_input_layout"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="20dp" >
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/ic_personal_setting_phone" />
		<EditText
			android:id="@+id/phone_et"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="10dp"
			android:background="@null"
			android:hint="请输入您的手机号"
			android:inputType="phone" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="20dp"
		android:gravity="center_vertical" >
		<CheckBox
			android:id="@+id/read_protocol_cb"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@null"
			android:button="@null"
			android:checked="true"
			android:drawableLeft="@drawable/bg_cb"
			android:padding="5dp" />
		<TextView
			android:id="@+id/protocol_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:text="@string/i_have_read_protocol"
			android:textColor="#F2A02B" />
	</LinearLayout>
	<Button
		android:id="@+id/certain_btn"
		style="@style/RedButton"
		android:layout_marginLeft="@dimen/input_et_margin_left"
		android:layout_marginRight="@dimen/input_et_margin_left"
		android:layout_marginTop="30dp"
		android:onClick="buttonClick"
		android:text="获取验证码" />
</LinearLayout>