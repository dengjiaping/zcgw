<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	<ImageView
		android:id="@+id/top_iv"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		android:src="@drawable/navigation_top_1" />
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:gravity="bottom"
		android:orientation="horizontal" >
		<ImageView
			android:id="@+id/left_iv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitCenter"
			android:src="@drawable/navigation_left_men" />
		<ImageView
			android:id="@+id/gif1"
			android:layout_width="@dimen/gif_width"
			android:layout_height="@dimen/gif_height"
			android:src="@drawable/mark_000"
			android:visibility="visible" />
		<com.ant.liao.GifView
			android:id="@+id/gif2"
			android:layout_width="@dimen/gif_width"
			android:layout_height="@dimen/gif_height"
			android:enabled="false"
			android:visibility="gone" />
		<ImageView
			android:id="@+id/right_iv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitCenter"
			android:src="@drawable/navigation_right" />
	</LinearLayout>
	<ImageView
		android:id="@+id/bottom_iv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:scaleType="fitCenter"
		android:src="@drawable/navigation_bottom_1" />
</LinearLayout>